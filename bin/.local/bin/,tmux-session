#!/usr/bin/env bash

CWD=~/Developer

if [[ $# -eq 1 ]]; then
    selected=$1
else
  selected=$(find $(echo $CWD) \
      -mindepth 1 -maxdepth 3 \
      -type d ! -path "*/node_modules/*" ! -path "*/.git/*" \
      -exec stat --format '%X %n' {} + | sort -nr | cut -d' ' -f2- | \
      fzf --layout=reverse --color=bw --delimiter '/' --with-nth=5..)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected 'nvim README.md'
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected 'nvim README.md'
fi

tmux switch-client -t $selected_name || tmux attach-session -t $selected_name

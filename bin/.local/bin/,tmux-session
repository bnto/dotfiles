#!/usr/bin/env bash

CWD="$HOME/Developer"

if [[ $# -eq 1 ]]; then
    selected=$1
else
  selected=$(fd --type d --max-depth 4 --exclude node_modules --exclude .git . "$CWD" \
    | sed 's:/*$::' \
    | xargs stat --format='%X %n' \
    | sort -nr | cut -d' ' -f2- \
    | fzf --delimiter '/' --with-nth=5..)
fi

if [[ -z $selected ]]; then
    exit 0
fi

session_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    # Start tmux and new session
    tmux new-session -s $session_name -c $selected 'nvim README.md'
    exit 0
fi

if ! tmux has-session -t=$session_name 2> /dev/null; then
    # Create new session
    tmux new-session -ds $session_name -c $selected 'nvim README.md'
fi

# Switch to session
tmux switch-client -t $session_name || tmux attach-session -t $session_name
